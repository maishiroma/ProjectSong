            <string>/// Player Movement and Sprite Handling

// This get's the player's inputs and saves them into variables
key_right = keyboard_check(vk_right);
key_left = -keyboard_check(vk_left);
key_jump = keyboard_check_pressed(vk_space) + keyboard_check_pressed(vk_up);
if(key_jump == 2)
    key_jump = 1;

move = key_right + key_left;
hsp = move * moveSpeed;

// This part controls the jumping being activated
if(key_jump == 1 &amp;&amp; place_meeting(x,y+jumpSpeed,Terrain_obj) == true)
{
    isGrounded = false;
    isJumping = true;
    isMoving = true;
    alarm[0] = room_speed * jumpDuration;
}
// If the player has the wind wave on, they can double jump.
else if(soundWaveType == 2 &amp;&amp; hasDoubleJumped == false &amp;&amp; (keyboard_check_pressed(vk_space) || keyboard_check_pressed(vk_up)))
{
    isJumping = true;
    isMoving = true;
    hasDoubleJumped = true;
    alarm[0] = room_speed * doubleJumpDuration;
}

// Controls the vertical movement of jumping/falling.
if(isJumping == true)
{
    if(vsp &lt; -maxJumpSpeed)
        vsp = -maxJumpSpeed;
    else
        vsp -= jumpSpeed;
}
else
{
    if(vsp &gt; maxFallSpeed)
        vsp = maxFallSpeed;
    else
        vsp += fallSpeed;
}

// Horizontal collision
if(place_meeting(x+hsp,y,Terrain_obj) == true)
{
    while(!place_meeting(x+sign(hsp),y, Terrain_obj))
        x += sign(hsp);
    hsp = 0;
}

// If the player is on a moving surface, the player will move with it.
if(place_meeting(x,y+jumpSpeed,MovingTerrain_obj) == true)
{
    var platform = instance_find(MovingTerrain_obj, instance_position(x,y+jumpSpeed,MovingTerrain_obj));
    hsp += platform.hspeed;
}
x += hsp;

// Vertical collision
if(place_meeting(x,y+vsp,Terrain_obj) == true)
{
    while(!place_meeting(x,y+sign(vsp),Terrain_obj))
        y += sign(vsp);
    
    // If the player has touched the ground.
    if(sign(vsp) &gt; 0)
    {
        isGrounded = true;
        hasDoubleJumped = false;
    }       
    vsp = 0;
}
y += vsp;


/// Sprite handling

// This part takes care of walking/idle sprite choosing as well as indicating which direction the player is moving
if(key_right != 0)
{
    image_speed = 0.3;
    image_xscale = 3;
    moveDirection = "east";
    isMoving = true;
}
else if(key_left != 0)
{
    image_speed = 0.3;
    image_xscale = -3;
    moveDirection = "west";
    isMoving = true;
}
else
{
    image_speed = 0.15;
    isMoving = false;
}

// This part handles attacking/jumping sprites, depending on what the player is doing
if(isDisplayingAttack == false)
{
    if(isGrounded == true)
    {
        if(isMoving == true)
        {
            // If the player is moving and attacking
            if(keyboard_check_pressed(ord("Z")))
            {
                sprite_index = Player_AttackMove;
                isDisplayingAttack = true;
                alarm[1] = room_speed * 0.1;
            }
            else
                sprite_index = Player_Move;
        }
        else
        {
            // If the player is standing still and attacking
            if(keyboard_check_pressed(ord("Z")))
            {
                sprite_index = Player_AttackIdle;
                isDisplayingAttack = true;
                alarm[1] = room_speed * 0.1;
            }
            else
                sprite_index = Player_Idle;
        }
    }
    else
    {
         // If the player is in midair and attacking
         if(keyboard_check_pressed(ord("Z")))
         {
            sprite_index = Player_JumpAttack;
            isDisplayingAttack = true;
            alarm[1] = room_speed * 0.1;  
         }
         else
            sprite_index = Player_Jump;
    }
}
</string>
